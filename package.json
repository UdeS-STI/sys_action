{
    "name": "sys_action",
    "description": "Extension sys_action Typo3 v10",
    "devDependencies": {
        "@prettier/plugin-php": "^0.15.2",
        "eslint": "^7.13.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-formatter-gitlab": "^2.0.0",
        "eslint-plugin-json-format": "^2.0.1",
        "eslint-plugin-markdown": "^1.0.2",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.1",
        "lockfile-lint": "^4.3.7",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.1.2",
        "stylelint": "^13.7.2",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-order": "^4.1.0",
        "stylelint-prettier": "^1.1.2"
    },
    "scripts": {
        "format": "npm-run-all format:prettier format:eslint format:stylelint",
        "format:prettier": "prettier --ignore-path .lintIgnored --write '**/*.{js,json,md,php,scss,yaml,yml}'",
        "format:eslint": "eslint --ignore-path .lintIgnored . --ext js --fix",
        "format:stylelint": "",
        "lint": "npm-run-all lint:prettier lint:eslint lint:gitlab lint:stylelint",
        "lint:eslint": "eslint --ignore-path .lintIgnored . --ext js",
        "lint:gitlab": "eslint --ignore-path .lintIgnored . --ext js,md --format gitlab",
        "lint:prettier": "prettier --ignore-path .lintIgnored --check '**/*.{js,json,md,php,scss,yaml,yml}'",
        "lint:stylelint": ""
    },
    "husky": {
        "hooks": {
            "post-commit": "git update-index -g",
            "pre-commit": "lint-staged"
        }
    },
    "repository": {
        "type": "git",
        "url": "git@gitlab.sti.usherbrooke.ca:STI/SNA/communications-institutionnelles/cms-institutionnel/extensions/misc/sys_action.git"
    },
    "keywords": [
        "typo3",
        "php"
    ],
    "author": "UdeS",
    "license": "ISC"
}
